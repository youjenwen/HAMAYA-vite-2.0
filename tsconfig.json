{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Pages/*": ["src/pages/*"],
      "@Styles/*": ["src/styles/*"],
      "@Stories_modules/*": ["src/stories/modules/*"],
      "@Stories_components/*": ["src/stories/components/*"],
      "@Images/*": ["src/stories/assets/*"],
      "@Utils/*": ["src/utils/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "**/*.cy.ts", "**/*.test.tsx", "**/*.cy.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
